{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "power-modules/framework",
    "description": "Framework for building modular PHP applications and plugin ecosystems with encapsulated modules and PowerModuleSetup extensions",
    "type": "library",
    "keywords": [
        "modular",
        "framework",
        "power-modules",
        "dependency-injection",
        "encapsulation",
        "microservices",
        "modular-architecture",
        "di-container",
        "component-based",
        "plugin-system",
        "ecosystem",
        "powermodulesetup"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Evgenii T",
            "email": "roundcubez@gmail.com",
            "role": "Owner"
        }
    ],
    "autoload": {
        "psr-4": {
            "Modular\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Modular\\Framework\\Test\\": "test/"
        }
    },
    "require": {
        "php": "^8.4",
        "psr/container": "^2.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "friendsofphp/php-cs-fixer": "^3.87",
        "phpstan/phpstan": "^2.1"
    }
}